<view class="center"><button data-event-opts="{{[['tap',[['discovery',['$event']]]]]}}" class="button" bindtap="__e">开始搜索</button><button data-event-opts="{{[['tap',[['closeBluetooth',['$event']]]]]}}" class="button" bindtap="__e">关闭蓝牙适配器</button><button data-event-opts="{{[['tap',[['write160Model',['$event']]]]]}}" class="button" bindtap="__e">打印160模版</button><button data-event-opts="{{[['tap',[['printImage',['$event']]]]]}}" class="button" bindtap="__e">打印Logo</button><scroll-view class="canvas-buttons" scroll-y="true"><block wx:for="{{discoveredDevices}}" wx:for-item="item" wx:for-index="index" wx:key="deviceId"><block><text class="status">{{"设备名称:"+item.name}}</text><text class="status">{{"设备ID:"+item.deviceId}}</text><text class="status">{{"连接状态:"+(connectedDeviceId==item.deviceId?"已连接":"未连接")}}</text><button class="button" type="warn" data-event-opts="{{[['tap',[['connectDevice',['$0'],[[['discoveredDevices','deviceId',item.deviceId]]]]]]]}}" bindtap="__e">连接</button></block></block></scroll-view></view>